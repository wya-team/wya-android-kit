<?xml version="1.0" encoding="utf-8"?>
<IMGColorGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cg_colors"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:checkedButton="@+id/cr_white"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="4dp">


    <com.wya.uikit.imagecrop.view.EditColorRadio
        android:id="@+id/cr_white"
        android:layout_width="@dimen/image_color"
        android:layout_height="@dimen/image_color"
        android:layout_margin="@dimen/image_color_margin"
        app:image_color="@color/white" />

    <com.wya.uikit.imagecrop.view.EditColorRadio
        android:layout_width="@dimen/image_color"
        android:layout_height="@dimen/image_color"
        android:layout_margin="@dimen/image_color_margin"
        app:image_color="@color/black" />

    <com.wya.uikit.imagecrop.view.EditColorRadio
        android:layout_width="@dimen/image_color"
        android:layout_height="@dimen/image_color"
        android:layout_margin="@dimen/image_color_margin"
        app:image_color="@color/red" />

    <com.wya.uikit.imagecrop.view.EditColorRadio
        android:layout_width="@dimen/image_color"
        android:layout_height="@dimen/image_color"
        android:layout_margin="@dimen/image_color_margin"
        app:image_color="@color/color_orange" />

    <com.wya.uikit.imagecrop.view.EditColorRadio
        android:layout_width="@dimen/image_color"
        android:layout_height="@dimen/image_color"
        android:layout_margin="@dimen/image_color_margin"
        app:image_color="@color/progress_start" />

    <com.wya.uikit.imagecrop.view.EditColorRadio
        android:layout_width="@dimen/image_color"
        android:layout_height="@dimen/image_color"
        android:layout_margin="@dimen/image_color_margin"
        app:image_color="@color/segment_default" />

</IMGColorGroup>