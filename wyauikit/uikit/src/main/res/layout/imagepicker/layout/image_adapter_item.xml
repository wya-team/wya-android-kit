<?xml version="1.0" encoding="utf-8"?>
<com.wya.uikit.imagepicker.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_placeholder" />


    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:checked="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:button="@null"
        android:gravity="bottom"
        android:padding="8dp"
        android:drawableRight="@drawable/picture_checkbox_selector"/>

</com.wya.uikit.imagepicker.SquareRelativeLayout>