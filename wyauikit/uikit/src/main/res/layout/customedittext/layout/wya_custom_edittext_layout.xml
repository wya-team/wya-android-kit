<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wya_custom_edit_text_parent"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:background="@drawable/white_r5_bg"
    android:minHeight="80dp"
    android:orientation="vertical">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_hint_wya_custom_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="提示"
            android:textColor="#000"
            android:textSize="14sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_wya_custom_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textColor="#000"
            android:textSize="14sp" />

    </TableRow>

    <TextView
        android:id="@+id/tv_count_wya_custom_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:text="0/100"
        android:textColor="#999"
        android:textSize="10sp" />

</LinearLayout>
