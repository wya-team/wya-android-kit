<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="radius" format="dimension" />

    <!--segment attrs-->
    <declare-styleable name="WYASegmentedView">
        <attr name="lineColor" format="color" />
        <attr name="titleNormalColor" format="color" />
        <attr name="titleSelectColor" format="color" />
        <attr name="itemNormalBackground" format="color" />
        <attr name="itemSelectBackground" format="color" />
        <attr name="lineSize" format="dimension" />
        <attr name="titleSize" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="radius" />
    </declare-styleable>

    <!--pagination bottom view attrs-->
    <declare-styleable name="WYAPaginationBottomView">
        <attr name="textSize" format="dimension" />
        <attr name="buttonWidth" format="dimension" />
        <attr name="buttonHeight" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="selectPageTextColor" format="color" />
    </declare-styleable>

    <!--pagination dot attrs-->
    <declare-styleable name="WYAPaginationDot">
        <attr name="dotNumber" format="integer" />
        <attr name="dotBackgroundResource" format="reference" />
    </declare-styleable>


    <!--badge attrs-->
    <declare-styleable name="WYABadge">
        <attr name="solidColor" format="reference|color" />
        <attr name="textEnable" format="boolean" />
        <attr name="maxTextLength" format="integer" />
        <attr name="maxText" format="string" />
    </declare-styleable>

    <!--button attrs-->
    <declare-styleable name="WYAButton">
        <attr name="backColor" />
        <attr name="backColorPress" />
        <attr name="backGroundImage" />
        <attr name="backGroundImagePress" />
        <attr name="textColor" />
        <attr name="textColorPress" />
        <attr name="fillet" format="boolean" />
        <attr name="enabled" format="boolean" />
        <attr name="radius" />
        <attr name="shape">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>
    </declare-styleable>


    <!-- custom_item card-->
    <declare-styleable name="WYACardView">
        <attr name="backColor" />
        <attr name="backGroundImage" />
        <attr name="titleTextColor" />
        <attr name="rightTextColor" />
        <attr name="contentTextColor" />
        <attr name="assistTextColor" />
        <attr name="imgTitleLeft" format="reference" />
        <attr name="wyaCardRadius" format="float" />
    </declare-styleable>

    <!-- custom_item input_item-->
    <declare-styleable name="WYAInputItem">
        <attr name="backColor" />
        <attr name="leftImage" format="reference" />
        <attr name="rightImage" format="reference" />
        <attr name="leftTvColor" format="color" />
        <attr name="leftTvText" />

        <attr name="contentText" format="string" />
        <attr name="contentHint" format="string" />
        <attr name="contentTextColor" format="color" />
        <attr name="canEdit" format="boolean" />
        <attr name="contentInputType">
            <enum name="text" value="0" />
            <enum name="phone" value="1" />
            <enum name="card" value="2" />
            <enum name="password" value="3" />
            <enum name="money" value="4" />
        </attr>

        <attr name="rightTextStr" format="string" />
        <attr name="rightHint" format="string" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightCanEdit" format="boolean" />

        <attr name="lineViewColor" format="color" />
    </declare-styleable>


    <!-- stepper-->
    <declare-styleable name="WYAStepper">
        <attr name="reduceDrawable" format="reference" />
        <attr name="reduceDrawablePress" format="reference" />
        <attr name="reduceDisableDrawablePress" format="reference" />
        <attr name="addDrawable" format="reference" />
        <attr name="addDrawablePress" format="reference" />
        <attr name="addDisableDrawablePress" format="reference" />

        <attr name="value" format="integer" />
        <attr name="maxNum" format="integer" />
        <attr name="minNum" format="integer" />
    </declare-styleable>

    <!-- progress -->
    <declare-styleable name="WYAProgress">
        <attr name="circleColor" format="color" />
        <attr name="progressCircleColor" format="color" />
        <attr name="circleThickness" format="dimension" />
        <attr name="maxProgress" format="integer" />
        <attr name="animationDuration" format="integer" />
        <attr name="progressStartColor" format="color" />
        <attr name="progressEndColor" format="color" />
        <attr name="progressArgbColor" format="boolean" />
        <attr name="smallCircleEnable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="pickerview">
        <attr name="wheelview_gravity">
            <enum name="center" value="17" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
        </attr>
        <attr name="wheelview_textSize" format="dimension" />
        <attr name="wheelview_textColorOut" format="color" />
        <attr name="wheelview_textColorCenter" format="color" />
        <attr name="wheelview_dividerColor" format="color" />
        <attr name="wheelview_lineSpacingMultiplier" format="float" />
    </declare-styleable>

    <declare-styleable name="EditColorRadio" tools:ignore="ResourceName">

        <attr name="image_color" format="color" />
        <attr name="image_stroke_color" format="color" />

    </declare-styleable>

    <!-- switcher attrs -->
    <declare-styleable name="SwitcherView">
        <attr name="switch_duration" format="integer" />
        <attr name="anim_duration" format="integer" />
        <attr name="switch_closable" format="boolean" />
        <attr name="switch_skipable" format="boolean" />
        <attr name="anim_direction">
            <enum name="down2up" value="0" />
            <enum name="up2down" value="1" />
            <enum name="left2right" value="2" />
            <enum name="right2left" value="3" />
        </attr>
    </declare-styleable>

    <!-- marquee attrs -->
    <declare-styleable name="MarqueeTextView">
        <attr name="mtv_interval" format="integer" />
        <attr name="mtv_closable" format="boolean" />
        <attr name="mtv_skipable" format="boolean" />
        <attr name="mtv_mode" format="enum">
            <enum name="repeat" value="0" />
            <enum name="once" value="1" />
        </attr>
    </declare-styleable>

    <!-- WYACustomEditText -->
    <declare-styleable name="WYACustomEditText">
        <attr name="wyaBackGroundImage" format="reference" />
        <attr name="wyaHintTextColor" format="color" />
        <attr name="wyaEditTextColor" format="color" />
        <attr name="wyaHintEditColor" format="color" />
        <attr name="wyaHintTextStr" />
        <attr name="wyaEditTextStr" />
        <attr name="wyaHintEditStr" />
        <attr name="wyaMaxNum" format="integer" />
        <attr name="wyaCountTextColor" format="color" />
    </declare-styleable>

    <!-- slide attrs -->
    <declare-styleable name="RangeSlideView">
        <attr name="rsd_slider_mode" format="enum">
            <enum name="range" value="0" />
            <enum name="single" value="1" />
        </attr>
        <attr name="rsd_progress_height" format="dimension" />
        <attr name="rsd_progress_min" format="integer" />
        <attr name="rsd_progress_max" format="integer" />
        <attr name="rsd_progress_background_color" format="color" />
        <attr name="rsd_progress_foreground_color" format="color" />
        <attr name="rsd_drawable" format="reference" />

        <attr name="rsd_region_mode" format="enum">
            <enum name="mode_integer" value="0" />
            <enum name="mode_float" value="1" />
        </attr>
        <attr name="rsd_region_padding" format="dimension" />
        <attr name="rsd_region_drawable_min" format="reference" />
        <attr name="rsd_region_drawable_max" format="reference" />
        <attr name="rsd_region_bitmap_size" format="dimension" />
        <attr name="rsd_region_text_color" format="dimension" />
        <attr name="rsd_region_text_size" format="dimension" />
    </declare-styleable>


    <!-- TODO ZCQ TEST -->
    <style name="StyleSlide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <!--<item name="android:layout_marginTop">?attr/wya_slide_margin_top</item>-->
        <!--<item name="android:layout_marginTop">30dp</item>-->
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <!--<item name="rsd_slider_mode">?attr/wya_slide_mode</item>-->
        <item name="rsd_slider_mode">single</item>
        <!--<item name="android:layout_marginBottom">30dp</item>-->
        <item name="rsd_progress_foreground_color">@color/design_default_color_primary</item>
        <!--<item name="android:paddingLeft">?attr/wya_slide_padding_left</item>-->
        <!--<item name="android:paddingRight">?attr/wya_slide_padding_right</item>-->
    </style>

    <!-- swipe back attrs -->
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference" />

</resources>