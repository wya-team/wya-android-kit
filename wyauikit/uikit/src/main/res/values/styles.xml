<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--dialog:自定义dialog背景全透明无边框theme -->
    <style name="WYACustomDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--popupwindow:显示动画-->
    <style name="pop_add">
        <item name="android:windowEnterAnimation">@anim/popup_window_add_show</item>
        <item name="android:windowExitAnimation">@anim/popup_window_add_hide</item>
    </style>

    <style name="GalleryCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/picture_checkbox_selector</item>
    </style>

    <style name="choiceMenuStyle">
        <item name="android:windowEnterAnimation">@anim/choice_menu_in</item>
        <item name="android:windowExitAnimation">@anim/choice_menu_out</item>
    </style>

    <!--WYACustomDialog animation-->
    <style name="dialog_bottom_anim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_bottom</item>
    </style>


    <!--customPicker animation-->
    <style name="picker_view_slide_anim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pickerview_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/pickerview_slide_out_bottom</item>
    </style>


    <style name="ImageTextDialog" parent="android:Theme.Holo.Dialog">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustResize</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>

        <item name="android:windowAnimationStyle">@style/ImageDialogAnimation</item>

    </style>

    <style name="ImageDialogAnimation" parent="android:Animation.Dialog">

        <item name="android:windowEnterAnimation">@anim/image_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/image_dialog_exit</item>

    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <!-- slidder styles -->
    <style name="style_slidder_global_option">
        <item name="slidderMode">single</item>
        <item name="slidderProgressHeight">@dimen/dp_2</item>
        <item name="slidderProgressForegroundColor">@color/slidder_foreground_default_color</item>
        <item name="slidderProgressBackgroundColor">@color/slidder_background_default_color</item>
        <item name="slidderDrawable">@drawable/slidder_default_drawable</item>
        <item name="slidderRegionMode">mode_integer</item>
        <item name="slidderRegionPadding">@dimen/dp_10</item>
        <item name="slidderRegionTextColor">@color/black</item>
        <item name="slidderRegionTextSize">14sp</item>
    </style>

    <!-- marquee styles -->
    <style name="style_marquee_global_option">
        <item name="marqueeInterval">5000</item>>
        <item name="marqueeClosable">false</item>>
        <item name="marqueeSkipable">true</item>
        <item name="marqueeMode">repeat</item>
    </style>

    <!-- switch styles-->
    <style name="style_switch_global_option">
        <item name="animDirection">right2left</item>>
        <item name="animDuration">400</item>>
        <item name="switchClosable">true</item>
        <item name="switchDuration">3000</item>
    </style>

    <!-- style_button_global_option-->
    <style name="style_button_global_option"></style>

    <!-- style_stepper_global_option-->
    <style name="style_stepper_global_option"></style>

    <!-- style_progress_global_option-->
    <style name="style_progress_global_option"></style>

    <style name="PaginationViewGlobalOption">
        <item name="buttonHeight">20dp</item>
        <item name="buttonWidth">50dp</item>
        <item name="leftText">上一页</item>
        <item name="rightText">下一页</item>
        <item name="selectPageTextColor">@color/primary_color</item>
        <item name="textColor">@color/black</item>
        <item name="textSize">13sp</item>
    </style>

    <style name="PaginationDotGlobalOption">
        <item name="dotBackgroundResource">@drawable/pagination_selector_dot_solid</item>
        <item name="dotNumber">3</item>
    </style>

    <style name="SegmentedViewGlobalOption">
        <item name="titleSelectColor">@color/white</item>
        <item name="titleNormalColor">@color/red</item>
        <item name="titleSize">14sp</item>
        <item name="strokeColor">@color/red</item>
        <item name="strokeWidth">2dp</item>
        <item name="radius">5dp</item>
        <item name="itemSelectBackground">@color/red</item>
        <item name="itemNormalBackground">@color/white</item>
        <item name="lineColor">@color/red</item>
        <item name="lineSize">2dp</item>
    </style>


</resources>
