<resources>

    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppTheme" parent="KitTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- TODO ZCQ TEST -->
        <!--<item name="wya_slide_margin_top">30dp</item>-->
        <!-- TODO ZCQ TEST -->

    </style>

    <style name="ExampleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="SlideRightAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:taskOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:taskToFrontEnterAnimation">@anim/slide_in_right</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="OnClick">
        <item name="android:clickable">true</item>
        <item name="android:onClick">OnClick</item>
    </style>

    <!-- slidder styles -->
    <style name="style_slidder">
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- marquee styles -->
    <style name="style_marquee">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_4</item>
        <item name="android:background">@color/notice_bg_color</item>
        <item name="android:drawablePadding">@dimen/dp_14</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
        <item name="android:text">@string/string_uikit_notice_text</item>
        <item name="android:textColor">@color/notice_text_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!-- switch styles -->
    <style name="style_switch">
        <item name="android:layout_width">match_parent</item>>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:background">@color/white</item>
    </style>

    <!-- switch styles -->
    <style name="style_button">
        <item name="android:layout_width">match_parent</item>>
        <item name="android:layout_height">46dp</item>>
        <item name="android:layout_margin">10dp</item>
        <item name="buttonFillet">true</item>
        <item name="buttonRadius">5dp</item>
        <item name="buttonTextColor">@color/white</item>
    </style>

    <style name="DownLoadEditCheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/down_file_checkbox_selector</item>
    </style>
</resources>
