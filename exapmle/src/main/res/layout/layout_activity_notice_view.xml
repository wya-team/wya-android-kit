<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f4f4f4"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/notice_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_voiceorange" />

        <com.wya.uikit.notice.switcher.WYASwitcherView
            android:id="@+id/vs_down2up"
            style="@style/style_switch"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            app:switchDuration="2000"
            app:switchSkipable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_back_notice" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_closable_switcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/notice_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_voiceorange" />

        <com.wya.uikit.notice.switcher.WYASwitcherView
            android:id="@+id/vs_up2down"
            style="@style/style_switch"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            app:animDirection="up2down"
            app:switchClosable="true"
            app:switchDuration="2000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_cancel_notice" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/notice_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_6">

        <com.wya.uikit.notice.switcher.WYASwitcherView
            android:id="@+id/vs_left2right"
            style="@style/style_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:animDirection="left2right"
            app:switchSkipable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_back_notice" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/notice_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_6">

        <com.wya.uikit.notice.switcher.WYASwitcherView
            android:id="@+id/vs_right2left"
            style="@style/style_switch"
            android:background="#ffffff"
            app:animDirection="right2left"
            app:switchClosable="true" />

    </LinearLayout>

    <com.wya.uikit.notice.WYAMarqueeTextView
        android:id="@+id/marquee"
        style="@style/style_marquee"
        android:drawableLeft="@drawable/icon_voiceorange"
        android:drawableRight="@drawable/icon_back_notice"
        app:marqueeAutoStart="false"
        app:marqueeSkipable="true" />

    <com.wya.uikit.notice.WYAMarqueeTextView
        style="@style/style_marquee"
        android:drawableLeft="@drawable/icon_voiceorange"
        android:drawableRight="@drawable/icon_cancel_notice"
        app:marqueeClosable="true"
        app:marqueeDuration="10000" />

    <com.wya.uikit.notice.WYAMarqueeTextView
        style="@style/style_marquee"
        android:drawableRight="@drawable/icon_back_notice"
        app:marqueeSkipable="true" />

    <com.wya.uikit.notice.WYAMarqueeTextView style="@style/style_marquee" />

</LinearLayout>
