<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wya.example.module.uikit.keyboard.KeyboardExampleActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_show_keyboard"
        android:layout_width="match_parent"
        android:text="显示软件盘"
        android:textColor="@drawable/btn_c333333_click_color"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        />
    <Button
        android:id="@+id/btn_hide_keyboard"
        android:layout_width="match_parent"
        android:text="影藏软件盘"
        android:textColor="@drawable/btn_c333333_click_color"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        />
    <Button
        android:id="@+id/btn_custom_keyboard"
        android:layout_width="match_parent"
        android:text="显示自定义软件盘"
        android:textColor="@drawable/btn_c333333_click_color"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        />

</LinearLayout>
