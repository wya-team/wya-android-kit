<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.wya.example.module.uikit.customitems.inputitem.InputItemExampleActivity">

    <com.wya.uikit.customitems.WYAInputItem
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:backColor="#ffffff"
        app:canEdit="false"
        app:contentHint="编辑文本提示"
        app:leftImage="@drawable/tabbar_item_22dp"
        app:contentTextColor="@color/black"
        app:leftTvText="左边"
        app:lineViewColor="#000000"
        app:rightCanEdit="false"
        app:rightImage="@drawable/icon_right_arrow"
        app:rightText="右边文字"
        app:rightTextColor="#333333"></com.wya.uikit.customitems.WYAInputItem>

    <com.wya.uikit.customitems.WYAInputItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backColor="#ffffff"
        app:canEdit="false"
        app:contentHint="编辑文本提示"
        app:leftImage="@drawable/tabbar_item_22dp"
        app:leftTvText="左边"
        app:lineViewColor="#000000"
        app:rightCanEdit="false"
        app:rightImage="@drawable/icon_right_arrow"
        app:rightText=""
        app:rightTextColor="#333333"></com.wya.uikit.customitems.WYAInputItem>

    <com.wya.uikit.customitems.WYAInputItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backColor="#ffffff"
        app:canEdit="false"
        app:contentHint="编辑文本提示"
        app:leftTvText="左边"
        app:lineViewColor="#000000"
        app:rightCanEdit="false"
        app:rightText="右边文字"
        app:rightTextColor="@color/blue"></com.wya.uikit.customitems.WYAInputItem>

    <com.wya.uikit.customitems.WYAInputItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backColor="#ffffff"
        app:canEdit="false"
        app:contentHint="编辑文本提示"
        app:leftTvText="左边"
        app:contentText="输入的内容"
        app:contentTextColor="@color/black"
        app:lineViewColor="#000000"
        app:rightCanEdit="false"
        app:rightImage="@drawable/icon_right_arrow"
        app:rightText=""
        app:rightTextColor="#333333"></com.wya.uikit.customitems.WYAInputItem>

    <com.wya.uikit.customitems.WYAInputItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backColor="#ffffff"
        app:canEdit="false"
        app:contentHint="编辑文本提示"
        app:leftTvText="左边"
        app:lineViewColor="#000000"
        app:rightCanEdit="false"
        app:rightImage="@drawable/icon_right_arrow"
        app:rightText="右边文字"
        app:rightTextColor="#333333"></com.wya.uikit.customitems.WYAInputItem>

    <com.wya.uikit.customitems.WYAInputItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backColor="#ffffff"
        app:canEdit="true"
        app:contentHint="编辑文本提示"
        app:leftImage="@drawable/tabbar_item_22dp"
        app:leftTvText="左边"
        app:lineViewColor="#000000"
        app:rightCanEdit="false"
        app:rightImage="@drawable/icon_right_arrow"
        app:rightText="右边文字"
        app:rightTextColor="#333333"></com.wya.uikit.customitems.WYAInputItem>

</LinearLayout>
