                app:rightCanEdit="false"
                app:rightText="使用说明"
                app:rightTextColor="@color/primary_color"></com.wya.uikit.customitems.WYAInputItem>

            <com.wya.uikit.customitems.WYAInputItem
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:backColor="#ffffff"
                app:canEdit="true"
                app:contentHint="我是暗提示"
                app:contentText="输入内容"
                app:contentTextColor="@color/black"
                app:leftText="标签"
                app:leftTextColor="@color/black"
                app:lineColor="#000000"
                app:rightCanEdit="false"
                app:rightImage="@drawable/icon_right_arrow"
                app:rightText=""
                app:rightTextColor="#868686"></com.wya.uikit.customitems.WYAInputItem>


            <com.wya.uikit.customitems.WYAInputItem
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:backColor="#ffffff"
                app:canEdit="true"
                app:contentHint="我是暗提示"
                app:contentText="输入内容"
                app:contentTextColor="@color/black"
                app:leftText="标签"
                app:leftTextColor="@color/black"
                app:lineColor="#000000"
                app:rightCanEdit="false"
                app:rightImage="@drawable/icon_right_arrow"
                app:rightText="右侧注释"
                app:rightTextColor="#868686"></com.wya.uikit.customitems.WYAInputItem>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="格式" />


            <com.wya.uikit.customitems.WYAInputItem
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:backColor="#ffffff"
                app:canEdit="true"
                app:contentHint="我是暗提示"
                app:contentInputType="phone"
                app:contentText="18079787890"
                app:contentTextColor="@color/black"
