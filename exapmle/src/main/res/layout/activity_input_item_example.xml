<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f4f4f4"
    android:orientation="vertical"
    tools:context="com.wya.example.module.uikit.customitems.inputitem.InputItemExampleActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="右侧注释" />

            <com.wya.uikit.customitems.WYAInputItem
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:backColor="#ffffff"
                app:canEdit="true"
                app:contentHint="我是暗提示"
                app:contentText="输入内容"
                app:contentTextColor="@color/black"
                app:leftText="标签"
                app:leftTextColor="@color/black"
                app:lineColor="#000000"
                app:rightCanEdit="false"
                app:rightText="右侧注释"
                app:rightTextColor="#868686"></com.wya.uikit.customitems.WYAInputItem>

            <com.wya.uikit.customitems.WYAInputItem
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:backColor="#ffffff"
                app:canEdit="true"
                app:contentHint="我是暗提示"
                app:contentTextColor="@color/black"
                app:leftText="标签"
                app:leftTextColor="@color/black"
