<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wya.example.ExampleActivity">


    <com.wya.uikit.button.WYAButton
        android:id="@+id/wya_button_hardware"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="硬件（hardware）"
        android:textAllCaps="false"
        app:backColor="#FF0000"
        app:fillet="true"
        app:textColor="#ffffff"
        app:textColorPress="#50ffffff"
        app:wya_button_radius="10" />


    <com.wya.uikit.button.WYAButton
        android:id="@+id/wya_button_ui_kit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="UI组件库（UiKit）"
        android:textAllCaps="false"
        app:backColor="#118EE9"
        app:fillet="true"
        app:textColor="#ffffff"
        app:textColorPress="#50ffffff"
        app:wya_button_radius="10" />

    <com.wya.uikit.button.WYAButton
        android:id="@+id/wya_button_util"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="工具库（Utils）"
        android:textAllCaps="false"
        app:backColor="#333333"
        app:fillet="true"
        app:textColor="#ffffff"
        app:textColorPress="#50ffffff"
        app:wya_button_radius="10" />

</LinearLayout>
