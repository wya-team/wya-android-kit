<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <com.wya.uikit.button.WYAButton
        android:id="@+id/wya_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="start"
        android:drawableLeft="@null"
        android:text="正常button"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:buttonBackGroundColorPress="#0183d7"
        app:buttonBackGroundColor="#108de7"
        app:buttonFillet="true"
        app:buttonRadius="5dp"
        app:buttonTextColor="#ffffff"
        app:buttonTextColorPress="#50ffffff" />
</LinearLayout>
