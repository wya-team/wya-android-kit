<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f4f4f4"
    android:orientation="vertical"
    tools:context=".module.utils.fliedownload.DownLoadExampleActivity">

    <RelativeLayout
        android:id="@+id/download_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/down_file_image"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@color/dddddd"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download_item" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/down_file_image"
            android:text="下载中"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/loading_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/down_file_image"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/down_file_image"
            android:text="10个文件"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/complete_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="10dp">


        <LinearLayout
            android:id="@+id/file_down_has"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@color/dddddd"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download_item" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/file_down_has"
            android:text="已完成"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/success_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/file_down_has"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/file_down_has"
            android:text="10个文件"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dddddd"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已下载:"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/down_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_color"
            android:textSize="12sp"
            tools:text="10MB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", 剩余空间:"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/free_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_color"
            android:textSize="12sp"
            tools:text="1GB" />
    </LinearLayout>

</LinearLayout>